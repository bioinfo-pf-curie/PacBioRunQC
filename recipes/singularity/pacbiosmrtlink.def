%environment
    export LC_ALL=C

Bootstrap: docker
From: centos:7.8.2003

%environment
    export LC_ALL=C
    export PATH=/smrtlink/smrtcmds/bin/:$PATH 
%setup

    touch runqc-reports
     
%post
    SMRTLINK_VERSION=10.1.0.119588 && \
    yum install -y which rsync net-tools wget ImageMagick && \
       yum clean all
    wget http://isiserver.curie.fr/smrtlink/smrtlink_${SMRTLINK_VERSION}.run && \
       sh smrtlink_*.run  --rootdir /smrtlink --smrttools-only && \
       rm smrtlink_*.run
    ln -sfn /smrtlink/smrtcmds/bin/python3 /usr/bin/python3
